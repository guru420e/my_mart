<form action="<%= submitUrl %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
    <p>
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= product?.title || '' %>" id="title">
    </p>
    <p>
        <label for="image">Image</label>
        <input type="file" name="image" id="image" accept="image/png,image/jpg" <% if (imageRequired) { %>
        required = true
        <% } %> >
    </p>
    <p>
        <label for="summary">Summary</label>
        <input type="text" name="summary" value="<%= product?.summary || '' %>" id="summary" maxlength="250">
    </p>
    <p>
        <label for="price">Price</label>
        <input type="number" name="price" value="<%= product?.price || '' %>" id="price" min="0.01" step="0.01"
            required>
    </p>
    <p>
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="7"><%= product?.description || '' %></textarea>
    </p>
    <p>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button class="btn">Save</button>
    </p>
</form>